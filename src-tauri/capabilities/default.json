{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**/*"
        }
      ]
    },
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-write-text-file",
    "fs:allow-write-file",
    "fs:allow-app-write",
    "fs:allow-stat",
    "fs:allow-lstat",
    "fs:allow-fstat",
    "dialog:default",
    "clipboard-manager:allow-write-text",
    "clipboard-manager:allow-write-image"
  ]
}